<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<MenuBar xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.isador.jspe.app.menu.MenuController"
         id="systemMenu" BorderPane.alignment="CENTER">
    <Menu id="menuFile" mnemonicParsing="false" text="%menu.file">
        <MenuItem id="itemFileNewProject" mnemonicParsing="false" text="%menu.file.new_project" onAction="#newProjectClicked"/>
        <MenuItem id="itemFileClose" mnemonicParsing="false" text="%menu.file.close"/>
    </Menu>
    <Menu id="menuEdit" mnemonicParsing="false" text="%menu.edit">
        <MenuItem id="itemEditDelete" mnemonicParsing="false" text="%menu.edit.delete"/>
    </Menu>
    <Menu id="menuHelp" mnemonicParsing="false" text="%menu.help">
        <MenuItem id="itemHelpAbout" mnemonicParsing="false" text="%menu.help.about"/>
    </Menu>
</MenuBar>
