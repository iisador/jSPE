<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" id="borderPane" prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/16" fx:controller="com.isador.jspe.ui.MainController">
    <top>
        <fx:include source="menu.fxml"/>
    </top>
    <center>
        <SplitPane dividerPositions="0.5">
            <TabPane id="tabPane" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" tabMaxWidth="100.0"
                     BorderPane.alignment="CENTER">
                <Tab text="Untitled Tab 1">
                    <Pane onMouseDragged="#onMouseEvent" onMousePressed="#onMouseEvent"/>
                </Tab>
            </TabPane>
            <SplitPane dividerPositions="0.5, 0.5" orientation="VERTICAL" prefWidth="120.0">
                <fx:include source="resourcesMatrix.fxml"/>
                <fx:include source="payloadsMatrix.fxml"/>
            </SplitPane>
        </SplitPane>
    </center>
    <bottom>
        <Pane maxHeight="30.0">
            <HBox>
                <Label id="elem"/>
            </HBox>
        </Pane>
    </bottom>
</BorderPane>
