<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.VBox?>
<TitledPane xmlns:fx="http://javafx.com/fxml/1" animated="false" prefHeight="600.0" prefWidth="800.0" text="Resources"
            xmlns="http://javafx.com/javafx/16" fx:controller="com.isador.jspe.ui.ResourcesController">
    <VBox>
        <TableView id="resources" editable="true" onMouseClicked="#resourceSelected">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <ButtonBar>
            <buttons>
                <Button onMouseClicked="#addResource" text="+"/>
                <Button id="btnRemoveResource" onMouseClicked="#removeResource" text="-" disable="true"/>
            </buttons>
        </ButtonBar>
    </VBox>
</TitledPane>
